{
  "compilerOptions": {
    "target": "es6",                 
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,                
    "skipLibCheck": true,            
    "esModuleInterop": true,         // CommonJS va ES modulini moslashtirish
    "allowSyntheticDefaultImports": true, 
    "allowImportingTsExtensions": true, // Default importlarga ruxsat berish
    "strict": true,                  // Qattiq TypeScript qoidalari
    "forceConsistentCasingInFileNames": true,  // Fayl nomlarini mos yozish
    "module": "esnext",              // Modul tizimi
    "moduleResolution": "node",      // Modul rezolyutsiyasi
    "resolveJsonModule": true,       // JSON modullarini import qilishga ruxsat
    "isolatedModules": true,         // Modullarni ajratilgan holda ishlash
    "noEmit": true,                  // Kompilyatsiya natijasini chiqarib yubormaslik
    "jsx": "react-jsx"               // JSX ni React uchun ishlatish
  },
  "include": ["src"],                // `src` katalogidagi fayllarni qo'shish
  "exclude": ["node_modules"]        // `node_modules` ni chiqarib tashlash
}